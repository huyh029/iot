# Server Configuration
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# ESP32 Configuration
ESP32_MQTT_BROKER=mqtt://localhost:1883
ESP32_TOPIC_PREFIX=smartgarden

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Gmail Configuration (for sending notifications)
# Get App Password: Google Account > Security > 2-Step Verification > App passwords
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Resend API (alternative email service)
RESEND_API_KEY=your_resend_api_key

# ThingsBoard Configuration
THINGSBOARD_HOST=https://thingsboard.cloud
THINGSBOARD_MQTT_HOST=mqtt://thingsboard.cloud
THINGSBOARD_MQTT_PORT=1883
THINGSBOARD_PROVISION_KEY=your_provision_key
THINGSBOARD_PROVISION_SECRET=your_provision_secret
THINGSBOARD_USERNAME=your_thingsboard_email
THINGSBOARD_PASSWORD=your_thingsboard_password
